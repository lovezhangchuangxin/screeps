{
  "name": "screeps",
  "displayName": "screeps",
  "description": "screeps terminal for vscode",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.94.0"
  },
  "categories": [
    "Other"
  ],
  "publisher": "zhangchuangxin",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:lovezhangchuangxin/screeps.git"
  },
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "panel": [
        {
          "id": "screeps",
          "title": "Screeps",
          "icon": "media/dep.svg"
        }
      ]
    },
    "views": {
      "screeps": [
        {
          "id": "screeps-terminal",
          "type": "webview",
          "name": "Screeps Terminal",
          "icon": "media/dep.svg"
        }
      ]
    },
    "configuration": {
      "title": "Screeps",
      "properties": {
        "screeps.email": {
          "type": [
            "string",
            "null"
          ],
          "default": null,
          "description": "Screeps账号邮箱"
        },
        "screeps.password": {
          "type": [
            "string",
            "null"
          ],
          "default": null,
          "description": "Screeps账号密码"
        }
      }
    },
    "commands": []
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "build:html": "node ./scripts/buildHtml.js",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "format": "prettier --write src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/minimist": "^1.2.5",
    "@types/mocha": "^10.0.8",
    "@types/node": "20.x",
    "@types/vscode": "^1.94.0",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.24.0",
    "eslint": "^9.11.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.3",
    "typescript": "^5.6.2"
  },
  "dependencies": {
    "minimist": "^1.2.8",
    "screeps-simple-api": "^1.0.3"
  }
}
